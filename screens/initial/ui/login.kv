<LoginScreen>:
    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            id: label
            text: "CODE"
            font_size: 32

        TextInput:
            id: passcode_input
            password: True
            readonly: True
            font_size: 32
            halign: 'center'

        GridLayout:
            cols: 3

            Button:
                text: '1'
                on_press: root.add_digit(self)
            Button:
                text: '2'
                on_press: root.add_digit(self)
            Button:
                text: '3'
                on_press: root.add_digit(self)
            Button:
                text: '4'
                on_press: root.add_digit(self)
            Button:
                text: '5'
                on_press: root.add_digit(self)
            Button:
                text: '6'
                on_press: root.add_digit(self)
            Button:
                text: '7'
                on_press: root.add_digit(self)
            Button:
                text: '8'
                on_press: root.add_digit(self)
            Button:
                text: '9'
                on_press: root.add_digit(self)
            Button:
                text: '0'
                on_press: root.add_digit(self)

        Button:
            id: forgot_button
            text: "Forgot code?"
            size_hint_y: None
            height: '50dp'
            opacity: 0
            on_press: root.forgot_passcode(self)
