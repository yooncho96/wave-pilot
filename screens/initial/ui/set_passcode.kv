<SetPasscodeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            id: label
            text: "Enter your 4-digit code.\nYou will enter this code every time you access WAVE."
            font_size: 24
            size_hint_y: None
            height: '50dp'

        TextInput:
            id: passcode_input
            password: True
            readonly: True
            font_size: 24
            halign: 'center'
            size_hint_y: None
            height: '50dp'

        GridLayout:
            id: keypad
            cols: 3
            spacing: 10
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: '1'
                on_press: root.on_key_press(self)
            Button:
                text: '2'
                on_press: root.on_key_press(self)
            Button:
                text: '3'
                on_press: root.on_key_press(self)
            Button:
                text: '4'
                on_press: root.on_key_press(self)
            Button:
                text: '5'
                on_press: root.on_key_press(self)
            Button:
                text: '6'
                on_press: root.on_key_press(self)
            Button:
                text: '7'
                on_press: root.on_key_press(self)
            Button:
                text: '8'
                on_press: root.on_key_press(self)
            Button:
                text: '9'
                on_press: root.on_key_press(self)
            Button:
                text: '0'
                on_press: root.on_key_press(self)
