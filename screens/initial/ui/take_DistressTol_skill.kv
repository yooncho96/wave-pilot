<TakeDistressTolScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Distress Tolerance"
            font_size: 32
            size_hint_y: None
            height: 50

        Label:
            text: "Next, can you pick some distress tolerance skills that work best for you?"
            size_hint_y: None
            height: 100

        Button:
            text: "TIPP skills"
            size_hint_y: None
            height: 50
            on_release: root.tipp_action(self)

        Button:
            text: "STOP"
            size_hint_y: None
            height: 50
            on_release: root.action(self)

        Button:
            text: "Self-soothing"
            size_hint_y: None
            height: 50
            on_release: root.soothing_action(self)

        Button:
            text: "Pros and cons"
            size_hint_y: None
            height: 50
            on_release: root.action(self)

        Button:
            text: "Something else"
            size_hint_y: None
            height: 50
            on_release: root.show_custom_input(self)

        Button:
            text: "Next"
            size_hint_y: None
            height: 50
            on_release: root.go_next(self)
