<MindfulnessScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Mindfulness"
            font_size: 32
            size_hint_y: None
            height: 50

        Label:
            text: "We'd like to get a sense of what skills work best for you. Can you pick some of your favorite mindfulness skills from those listed below?"
            size_hint_y: None
            height: 100

        BoxLayout:
            id: layout
            orientation: 'vertical'

            Button:
                text: "Breathing exercises"
                size_hint_y: None
                height: 50
                on_release: root.show_dropdown(self)

            Button:
                text: "Observe and Describe"
                size_hint_y: None
                height: 50
                on_release: root.show_dropdown(self)

            Button:
                text: "Participate"
                size_hint_y: None
                height: 50
                on_release: root.show_dropdown(self)

            Button:
                text: "Mediation and self-reflection"
                size_hint_y: None
                height: 50
                on_release: root.show_dropdown(self)

            Button:
                text: "Something else"
                size_hint_y: None
                height: 50
                on_release: root.show_dropdown(self)

        Button:
            text: "Next"
            size_hint_y: None
            height: 50
            on_release: root.go_next(self)
