<DistressToleranceScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Distress Tolerance"
            font_size: 24
            size_hint_y: None
            height: '40dp'

        Label:
            id: message_label
            text: ''
            font_size: 20
            size_hint_y: None
            height: '80dp'

        Button:
            text: "Next"
            size_hint: (1, 0.1)
            on_release: root.display_skills()


